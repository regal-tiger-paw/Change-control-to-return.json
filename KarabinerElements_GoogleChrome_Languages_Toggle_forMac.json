{
  "title": "Chrome Languages Toggle",
  "rules": [
    {
      "description": "right click, cursor down, enter, language change",
      "manipulators": [
        {
					"type": "basic",
					"from": {
						"key_code": "j",
						"modifiers": {
							"mandatory": ["left_control"]
						}
					},
          "to": [
            { "pointing_button": "button2", "halt": true, "delay_milliseconds": 100  },
            { "key_code": "t", "halt": true, "delay_milliseconds": 100 },
            { "key_code": "down_arrow", "halt": true, "delay_milliseconds": 100 },
            { "key_code": "down_arrow", "halt": true, "delay_milliseconds": 100 },
            { "key_code": "return_or_enter", "halt": true, "delay_milliseconds": 100 }
          ]
        }
      ]
    }
  ]
}
