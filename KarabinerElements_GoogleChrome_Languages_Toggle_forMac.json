{
  "title": "Chrome Languages Toggle",
  "rules": [
    {
      "description": "right click, cursor down, enter, language change",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "f12",
              "modifiers": {
                "mandatory": ["fn"]
              }
            }
          ],
          "to_after_key_up": [
            { "key_code": "t", "halt": true, "delay_milliseconds": 10 },
            { "key_code": "down_arrow", "halt": true, "delay_milliseconds": 10 },
            { "key_code": "down_arrow", "halt": true, "delay_milliseconds": 10 },
            { "key_code": "return_or_enter", "halt": true, "delay_milliseconds": 10 }
          ]
        }
      ]
    }
  ]
}
