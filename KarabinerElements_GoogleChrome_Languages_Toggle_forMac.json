{
  "title": "Chrome Languages Toggle",
  "rules": [
    {
      "description": "right click, cursor down, enter, language change",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            { "pointing_button": "button2", "event_type": "mouse_down" },
            { "pointing_button": "button2", "event_type": "mouse_up" },
            { "key_code": "t" },
            { "key_code": "down_arrow" },
            { "key_code": "down_arrow" },
            { "key_code": "return_or_enter" }
          ]
        }
      ]
    }
  ]
}
