{
  "title": "Chrome Languages Toggle",
  "rules": [
    {
      "description": "right click, cursor down, enter, language change",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            { "pointing_button": "button2" },
            { "key_code": "t"},
            { "key_code": "down_arrow"},
            { "key_code": "down_arrow"},
            { "key_code": "return_or_enter"}
          ]
        }
      ]
    }
  ]
}
